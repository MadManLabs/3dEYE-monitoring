<UserControl x:Class="WpfApp3.UIComponents.TreeCameraItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp3.UIComponents"
             mc:Ignorable="d" 
             d:DesignHeight="290" d:DesignWidth="280">
	<ListBoxItem>
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="*"/>
				<RowDefinition Height="25"/>
			</Grid.RowDefinitions>
			<Grid Grid.Row="1">
				<TextBlock x:Name="_name">123</TextBlock>
				<Button Style="{StaticResource MyButtonStyle}" Content="x" HorizontalAlignment="Right" Margin="0,2,5,0" Height="20" VerticalAlignment="Top" Width="25" Click="Button_Click" />
			</Grid>
			<Grid Grid.Row="0">
				<TextBlock x:Name="textLoading" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#CCC" FontSize="25">Loading...</TextBlock>
				<Image x:Name="viewport" Width="290" Height="230"/>
			</Grid>
		</Grid>
	</ListBoxItem>
</UserControl>
