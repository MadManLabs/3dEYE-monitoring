<UserControl x:Class="WpfApp3.UIComponents.TreeCameras"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp3.UIComponents"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="25"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<Grid Grid.Row="0">
			<Button Style="{StaticResource MyButtonStyle}" Content="Refresh" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Width="75" Click="ButtonClick_RefreshList" />
		</Grid>
		<Grid Grid.Row="1">
			<TreeView x:Name="tree" Background="#FF2D2D30" BorderThickness="0">
				<TreeViewItem Header="Loading..." Foreground="#CCC">
				</TreeViewItem>
				<TreeViewItem Header="Loading..." Foreground="#CCC">
				</TreeViewItem>
			</TreeView>
		</Grid>
	</Grid>
</UserControl>
